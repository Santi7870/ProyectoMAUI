<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:ProyectoMAUI.Pages"
       x:Class="ProyectoMAUI.AppShell">

    <!-- Flyout Menu -->
    <FlyoutItem Title="Inicio" Icon="dotnet_bot.png">
        
            <ShellContent Title="Catálogo" Icon="icon_catalog.png" ContentTemplate="{DataTemplate local:CatalogPage}" />
   
    </FlyoutItem>

    <!-- Otra navegación, si es necesario -->
    <FlyoutItem Title="Producto Detalle" Icon="icon_product.png">
        <ShellContent Title="Detalles del Producto" ContentTemplate="{DataTemplate local:UserInfoPage}" />
    </FlyoutItem>

</Shell>

